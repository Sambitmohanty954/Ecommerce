<h3> Listing All Products <h3>
	<%= link_to "Add Product" , new_product_path %>
<% if @products.empty?	%>
<p> No products found </p>
<% else %>
<ul>
	<% @products.each do |product| %>
		<li><%= link_to product.name , product_path(product.id) %> INR - <%= product.price %> -- <%= product.category_id %></li>
	<% end %>
	<ul>
		<% end %>
