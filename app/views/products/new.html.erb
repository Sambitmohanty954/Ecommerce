<h2> Add Product</h2>

<!-- name
	description
	price
	category_id
	stock
	cod_eligibility
	image_url -->
	<%= form_for @product do |f| %>
	<% if @product.errors.any? %>
	<h3> Errors: </h3>
	<ul>
		<% @product.errors.full_messages.each do |msg| %>
			<li> <%= msg %></li>
			<% end %>
		</ul>
		<% end %>


	<%= f.label :name %><br/>
	<%= f.text_field :name %><br/>

	<%= f.label :description %><br/>
	<%= f.text_area :description , rows:10 , cols:50 %><br/>

	<%= f.label :price %><br/>
	<%= f.number_field :price , min:1 %><br/>

	<%= f.label :category_id %><br/>
	<%= f.text_field :category_id %><br/>

	<%= f.label :stock %><br/>
	<%= f.text_field :stock %><br/>

		<%= f.label :cod_eligibility %><br/>
	<%= f.check_box :cod_eligibility %><br/>

		<%= f.label :image_url %><br/>
	<%= f.text_field :image_url %><br/>

	<%= f.submit %></br>
	<%= link_to "Back" , products_path %>

	<% end %>